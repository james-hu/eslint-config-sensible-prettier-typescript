{
  "name": "eslint-config-sensible-prettier-typescript",
  "version": "1.7.5",
  "description": "Sensible default eslint rules and prettier rules for Typescript projects",
  "scripts": {
    "prettier": "prettier -w .",
    "lint": "eslint .",
    "prepack": "rm -rf dist && tsc",
    "pretest": "rm -rf dist && tsc",
    "test": "npm run prettier && npm run lint && prettier --config ./test/prettier.config.cjs --write . && eslint --config ./test/eslint.config.cjs ."
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.dts",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.3.0"
  },
  "peerDependencies": {
    "typescript": ">=5.9.2",
    "prettier": ">=3.6.2",
    "@eslint-community/eslint-utils": ">=4.7.0",
    "@rushstack/eslint-patch": ">=1.12.0",
    "@typescript-eslint/eslint-plugin": ">=8.41.0",
    "@typescript-eslint/parser": ">=8.41.0",
    "eslint": ">=9.34.0",
    "eslint-config-prettier": ">=10.1.8",
    "eslint-config-xo-space": ">=0.35.0",
    "eslint-import-resolver-typescript": ">=4.4.4",
    "eslint-plugin-import": ">=2.32.0",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-mocha": ">=11.1.0",
    "eslint-plugin-perfectionist": ">=4.15.0",
    "eslint-plugin-unicorn": ">=60.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/james-hu/eslint-config-sensible-typescript.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "eslint-config",
    "sensible",
    "defaults",
    "prettier",
    "typescript"
  ],
  "author": "James Hu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/james-hu/eslint-config-sensible-typescript/issues"
  },
  "homepage": "https://github.com/james-hu/eslint-config-sensible-typescript#readme"
}
